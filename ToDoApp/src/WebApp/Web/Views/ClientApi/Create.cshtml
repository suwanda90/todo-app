@model Web.ViewModels.Helpers.BaseApiResultViewModel<Web.ViewModels.Config.ClientApiViewModel>
@{
    ViewData["Title"] = "Client Api";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-custom gutter-b">
                <div class="card-header">
                    <div class="card-title">
                        <h5 class="card-label">
                            Form Create - Data Client Api
                        </h5>
                    </div>
                </div>
                <form class="form" asp-action="Create">
                    <div class="card-body">
                        <div class="form-group">
                            <label>Name <span class="text-danger">*</span>:</label>
                            <input type="text" class="form-control" asp-for="Data.Name" required>
                            <span asp-validation-for="Data.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Client Id <span class="text-danger">*</span>:</label>
                            <input type="text" class="form-control" asp-for="Data.ClientId" required>
                            <span asp-validation-for="Data.ClientId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Is Active:</label>
                            <div class="checkbox-list">
                                <label class="checkbox checkbox-outline checkbox-success">
                                    <input type="checkbox" asp-for="Data.IsActive"> Active
                                    <span></span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">
                            Save
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            Close
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

